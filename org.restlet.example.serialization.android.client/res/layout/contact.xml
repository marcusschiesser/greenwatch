<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:gravity="top" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_firstname" style="@style/label" />
			<EditText android:id="@+id/field_firstname"
				android:inputType="text" android:layout_width="150dip"
				android:maxWidth="150dip" android:maxLength="30" style="@style/edit_text" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_lastname" style="@style/label" />
			<EditText android:id="@+id/field_lastname"
				android:inputType="text" android:layout_width="150dip"
				android:maxWidth="150dip" android:maxLength="30" style="@style/edit_text" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_age" style="@style/label" />
			<EditText android:id="@+id/field_age" android:inputType="number"
				android:layout_width="30dip" android:maxWidth="30dip"
				android:maxLength="3" style="@style/edit_text" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/ha_title"
				android:layout_height="fill_parent" android:layout_weight="2"
				android:layout_width="wrap_content" android:gravity="left|center_vertical"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="?android:attr/textColorPrimary" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_ha_line1" style="@style/label" />
			<EditText android:id="@+id/field_ha_line1"
				android:inputType="text" android:layout_width="150dip"
				android:maxWidth="150dip" android:maxLength="30" style="@style/edit_text" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_ha_line2" style="@style/label" />
			<EditText android:id="@+id/field_ha_line2"
				android:inputType="text" android:layout_width="150dip"
				android:maxWidth="150dip" android:maxLength="30" style="@style/edit_text" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_ha_zipcode" style="@style/label" />
			<EditText android:id="@+id/field_ha_zipcode"
				android:inputType="text" android:layout_width="50dip"
				android:maxWidth="50dip" android:maxLength="5" style="@style/edit_text" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_ha_city" style="@style/label" />
			<EditText android:id="@+id/field_ha_city" android:inputType="text"
				android:imeOptions="actionDone" android:layout_width="150dip"
				android:maxWidth="150dip" android:maxLength="30" style="@style/edit_text" />
		</LinearLayout>
		<LinearLayout style="@style/line">
			<TextView android:text="@string/field_ha_country" style="@style/label" />
			<EditText android:id="@+id/field_ha_country"
				android:inputType="text" android:layout_width="150dip"
				android:maxWidth="150dip" android:maxLength="30" style="@style/edit_text" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:gravity="bottom" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingTop="5dip" android:paddingLeft="4dip"
			android:paddingRight="4dip" android:paddingBottom="1dip"
			android:background="@android:color/transparent" android:gravity="bottom">
			<Button android:id="@+id/get_button" android:text="@string/get_button"
				android:layout_height="fill_parent" android:layout_width="0dip"
				android:layout_weight="1" />
			<Button android:id="@+id/update_button" android:text="@string/update_button"
				android:layout_height="fill_parent" android:layout_width="0dip"
				android:layout_weight="1" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>